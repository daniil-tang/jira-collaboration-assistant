{
  "compilerOptions": {
    "strictNullChecks": false,
    "jsx": "react",  // This enables JSX support in TypeScript (React 16.x or earlier)
    "strict": false,   // Enable strict type-checking options
    "target": "es6",  // Target JavaScript version (es6 or esnext)
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true                                 /* Skip type checking all .d.ts files. */
  }
}
